---
import clsx from "clsx";
import TimelineTrack from "@/components/react/timeline-track";
import CheckIcon from "@/assets/check-icon.svg";

const timelineItems = [
  {
    date: "May 2025",
    description: `Proposal <br/> Vision Launced`,
    icon: CheckIcon,
    start: "2024-01-01",
    end: "2024-03-31",
  },
  {
    date: "Current",
    description: `Pre-Draft <br/>Community Shaped`,
    start: "2025-09-01",
    end: "2025-10-30",
  },
  {
    date: "Nov/Dec 2025",
    description: `Draft <br/> Community Shaping`,
    start: "2025-11-01",
    end: "2025-12-31",
  },
  {
    date: "Upcoming",
    description: `Consistency Review <br/> Refining Quality`,
    start: "2026-01-01",
    end: "2026-03-31",
  },
  {
    date: "Upcoming",
    description: `WG Final Approval <br/> Ready for Impact`,
    start: "2026-04-01",
    end: "2026-06-30",
  },

  {
    date: "Upcoming",
    description: `SC Ratification <br/> Industry Endorsed`,
    start: "2026-07-01",
    end: "2026-09-30",
  },

  {
    date: "Upcoming",
    description: `Publication <br/> Building Tomorrow`,
    start: "2026-10-01",
    end: "2026-12-30",
  },
];
---

<section class="bg-white py-12 md:py-18 lg:py-20">
  <div class="container">
    <div class="mx-auto max-w-3xl">
      <h2 class="text-center text-2xl font-semibold md:text-3xl lg:text-4xl">
        Journey to Transformation
      </h2>
      <p class="mt-3 text-center text-lg md:mt-4 md:text-xl">
        Current focus: The specification is actively developing, and experts, operators, and
        sustainability practitioners are invited to refine and validate it.
      </p>
    </div>
    <div class="relative mt-12 md:mt-18 lg:mt-20">
      <TimelineTrack
        client:load
        count={timelineItems.length}
        activeIndex={3}
        segments={[
          { start: "2025-05-01", end: "2025-05-31" },
          { start: "2025-09-01", end: "2025-10-31" },
          { start: "2025-11-01", end: "2025-12-31" },
          { start: "2026-01-01", end: "2026-03-31" },
          { start: "2026-04-01", end: "2026-06-30" },
          { start: "2026-07-01", end: "2026-09-30" },
          { start: "2026-10-01", end: "2026-12-30" },
        ]}
      />
      <ol class="grid grid-cols-1 gap-6 md:grid-cols-7 md:gap-4 lg:gap-6">
        {
          timelineItems.map((item, index) => (
            <li class="relative flex flex-col items-center gap-3 text-center md:gap-4">
              <div class="relative">
                {item.date === "Current" && (
                  <span class="absolute -inset-2 inline-block animate-ping rounded-full bg-primary/40" />
                )}
                <div
                  data-timeline-dot
                  class={clsx(
                    "relative z-10 flex size-8 items-center justify-center rounded-full bg-accent-lighter text-white",
                    {
                      "bg-primary": index === 0 || index === 1,
                    }
                  )}
                >
                  {item.icon && <item.icon />}
                </div>
              </div>
              <div>
                <h3 class="mb-2 text-xl font-bold text-primary">{item.date}</h3>
                <p set:html={item.description} class="text-sm" />
              </div>
            </li>
          ))
        }
      </ol>
    </div>
  </div>
</section>
